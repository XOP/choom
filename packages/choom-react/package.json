{
  "name": "choom-react",
  "version": "0.1.0",
  "description": "UI building blocks for your next ReactJS prototype",
  "keywords": [
    "react",
    "ui",
    "design-system",
    "components",
    "emotion",
    "styled-components",
    "presentational"
  ],
  "main": "lib/components/index.js",
  "module": "lib/esm/components/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "cleanup": "rm -rf lib && mkdir lib",
    "setup": "node scripts/theme",
    "build:env": "babel src/components -d lib/components",
    "build:esm": "NODE_ENV=esm babel src/components -d lib/esm/components",
    "theme:env": "babel src/theme -d lib/theme && babel src/theme/*.css -d lib/theme --copy-files",
    "theme:esm": "babel src/theme -d lib/esm/theme && babel src/theme/*.css -d lib/esm/theme --copy-files",
    "build": "yarn cleanup && yarn setup && yarn build:env && yarn build:esm",
    "theme": "yarn theme:env && yarn theme:esm",
    "compile": "yarn build && yarn theme",
    "prepublish": "yarn compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XOP/choom.git"
  },
  "author": "XOP",
  "license": "Apache-2.0",
  "homepage": "https://github.com/XOP/choom#readme",
  "dependencies": {
    "@emotion/react": "^11.0.0",
    "nanoid": "^3.1.29",
    "prop-types": "^15.7.2",
    "react-feather": "^2.0.9"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
